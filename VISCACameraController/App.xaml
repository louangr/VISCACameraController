<Application x:Class="VISCACameraController.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mtuconverters="using:CommunityToolkit.WinUI.UI.Converters"
             xmlns:local="using:VISCACameraController">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Resources/Design.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <mtuconverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <mtuconverters:BoolNegationConverter x:Key="BoolNegationConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
