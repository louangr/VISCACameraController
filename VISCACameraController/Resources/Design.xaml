<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:VISCACameraController.Resources">
    <Color x:Key="LightContainerBackgroundColor">#DFDFDF</Color>
    <Color x:Key="DarkContainerBackgroundColor">#151515</Color>

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="ContainerBackgroundColor"
                             Color="{StaticResource LightContainerBackgroundColor}" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="ContainerBackgroundColor"
                             Color="{StaticResource DarkContainerBackgroundColor}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>